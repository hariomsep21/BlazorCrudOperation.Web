@page "/delete/{StudentId:int}"
@using NewDemo.Models.Model
@using NewDemo.Services.Interface
@inject NewDemo.ViewModel.StudentDeleteViewModel StudentVMDelete
@inject Microsoft.AspNetCore.Components.NavigationManager NavigationManager
<h2>Delete User</h2>
<br />
<div class="form-group">
    <h4>Do you want to delete this user?</h4>
    <table class="table">
        <tbody>
            <tr>
                <td>Student Id</td>
                <td>@StudentVMDelete.student.Id</td>
            </tr>
            <tr>
                <td>Student Name</td>
                <td>@StudentVMDelete.student.FullName</td>
            </tr>
            <tr>
                <td>Phone No.</td>
                <td>@StudentVMDelete.student.UserName</td>
            </tr>
            <tr>
                <td>Student Emai</td>
                <td>@StudentVMDelete.student.UserEmail</td>
            </tr>
            <tr>
                <td>Phone No.</td>
                <td>@StudentVMDelete.student.Phone</td>
            </tr>
            <tr>
                <td>Gender</td>
                <td>@StudentVMDelete.student.GenderName</td>
            </tr>
            <tr>
                <td>State</td>
                <td>@StudentVMDelete.student.StateName</td>
            </tr>
            
        </tbody>
    </table>
</div>
<div class="form-group">
    <input type="submit" value="Delete" @onclick="(async () => await StudentVMDelete.RemoveUser(StudentVMDelete.student.Id))" class="btn btn-danger" />
    <input type="submit" value="Cancel" @onclick="(() =>StudentVMDelete.Cancel())" class="btn btn-warning" />
</div>